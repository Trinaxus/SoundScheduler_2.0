# Server-side configuration (never expose publicly)
# Copy to server/.env and adjust values.

# Comma-separated list of allowed frontend origins for CORS
CORS_ALLOWED_ORIGINS=https://your-frontend-origin

# Public base URL of this server (used to build public file URLs)
# Example: https://your-domain.tld
BASE_URL=

# Session cookie name and flags
SESSION_NAME=ss_admin
COOKIE_SECURE=true

# Admin credentials (password is a hash generated with PHP's password_hash)
ADMIN_USERNAME=admin
# Example hash for the password "change-me" (generate your own!)
# ADMIN_PASSWORD_HASH=$2y$10$5qE8rFQe0Qe6nZQ2s8m9euRj6pF/H3i1iUOCN1xgS6o9B8pXwVgXq
ADMIN_PASSWORD_HASH=

# Data and upload directories (absolute paths optional; defaults are relative to server/)
DATA_DIR=
UPLOAD_DIR=
